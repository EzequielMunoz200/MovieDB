{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} · Posts{% endblock %}

{% block body %}
    <h1>Posts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', {id : post.id }) }}">{{ post.id }}</a></td>
                <td><a href="{{ path('post_show', {id : post.id }) }}">{{ post.title }}</a></td>
                <td><a href="{{ path('post_show', {id : post.id }) }}">{{ post.content }}</a></td>
                <td><a href="{{ path('post_show', {id : post.id }) }}">{{ post.date ? post.date|date('d-m-Y') : '' }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Il n'y a pas des billets</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('post_new') }}">Créer un nouveau billet</a>
{% endblock %}
