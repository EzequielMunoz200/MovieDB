{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} ~ Catégories{% endblock %}

{% block body %}

<div class="d-flex justify-content-between flex-column">
    <h1>Toutes les catégories</h1>
    <a class="btn btn-secondary align-self-start" href="{{ path('category_add') }}" role="button">Ajouter une
        catégorie</a>
</div>

<div class="card col-12 mt-4 p-0">
    <ul class="list-group list-group-flush">
        {% for category in categories %}
        <li class="list-group-item">
            <a class="stretched-link" href="{{ path("category_view", {id: category.id} ) }}">
                {{ category.name | capitalize}}</a>
        </li>
        {% endfor %}
    </ul>
</div>

{% endblock %}